{
  "version": 2,
  "builds": [
    {
      "src": "clientnpm/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/src/**"],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/clientnpm/assets/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/clientnpm/dist/img/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/clientnpm/index.html"
    }
  ]
} 