{
  "version": 2,
  "builds": [
    {
      "src": "clientnpm/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/src/**"],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/clientnpm/dist/assets/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/clientnpm/dist/img/$1"
    },
    {
      "src": "/favicon.svg",
      "dest": "/clientnpm/dist/favicon.svg"
    },
    {
      "src": "/vite.svg",
      "dest": "/clientnpm/dist/vite.svg"
    },
    {
      "src": "/(.*)",
      "dest": "/clientnpm/dist/$1"
    }
  ]
} 